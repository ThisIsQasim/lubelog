@using CarCareTracker.Helper
@model List<UserModel>
<div class="row">
    <div class="d-flex justify-content-between">
        <div class="d-flex align-items-center flex-wrap">
            <span class="ms-2 badge bg-success">@($"# of Users: {Model.Count()}")</span>
        </div>
        <div>
                <button onclick="showAddUser()" class="btn btn-primary btn-md mt-1 mb-1"><i class="bi bi-pencil-square me-2"></i>Add User</button>
        </div>
    </div>
</div>
<div class="row vehicleDetailTabContainer">
    <div class="col-12">
        <table class="table table-hover">
            <thead>
                <tr class="d-flex">
                    <th scope="col" class="col-3">Username</th>
                    <th scope="col" class="col-2">Can Add</th>
                    <th scope="col" class="col-2">Can Edit</th>
                    <th scope="col" class="col-2">Can Delete</th>
                    <th scope="col" class="col-2">Is Active</th>
                    <th scope="col" class="col-1">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (UserModel user in Model)
                {
                    <tr class="d-flex" style="cursor:pointer;">
                        <td class="col-3">@user.UserName</td>
                        <td class="col-2"><input class="form-check-input" type="checkbox" value="" onchange="updateUser(@user.Id)" id="checkCanAdd_@(user.Id)" @(StaticHelper.CheckedIfTrue(user.CanAdd)) /></td>
                        <td class="col-2"><input class="form-check-input" type="checkbox" value="" onchange="updateUser(@user.Id)" id="checkCanEdit_@(user.Id)" @(StaticHelper.CheckedIfTrue(user.CanEdit)) /></td>
                        <td class="col-2"><input class="form-check-input" type="checkbox" value="" onchange="updateUser(@user.Id)" id="checkCanDelete_@(user.Id)" @(StaticHelper.CheckedIfTrue(user.CanDelete)) /></td>
                        <td class="col-2"><input class="form-check-input" type="checkbox" value="" onchange="updateUser(@user.Id)" id="checkIsActive_@(user.Id)" @(StaticHelper.CheckedIfTrue(user.IsActive)) /></td>
                        <td class="col-1"><button type="button" class="btn btn-danger" onclick=""><i class="bi bi-trash"></i></button></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    function updateUser(userId) {
        var userCanAdd = $(`#checkCanAdd_${userId}`).is(":checked");
        var userCanEdit = $(`#checkCanEdit_${userId}`).is(":checked");
        var userCanDelete = $(`#checkCanDelete_${userId}`).is(":checked");
        var userIsActive = $(`#checkIsActive_${userId}`).is(":checked");
        var userModel = {
            id: userId,
            canAdd: userCanAdd,
            canEdit: userCanEdit,
            canDelete: userCanDelete,
            isActive: userIsActive
        }
        $.post('/Login/UpdateUser', {userModel: userModel}, function(data){
            if (data){
                successToast("User Updated");
            } else {
                errorToast("An error occurred, please try again later.");
            }
        })
    }
</script>